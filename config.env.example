# config.env.example

# =====================================================
# TRAVELREADY – KONFIGURACJA (SZABLON)
# =====================================================

# =====================================================
# ŚRODOWISKO APLIKACJI
# =====================================================

TRAVELREADY_ENV=development                             # Możliwe: development, production

# =====================================================
# KLUCZE I BEZPIECZEŃSTWO
# =====================================================

SECRET_KEY_DEVELOPMENT=dev-secret-key-CHANGE_ME         #DO UZUPEŁNIENIA
SECRET_KEY_PRODUCTION=prod-secret-key-CHANGE_ME         #DO UZUPEŁNIENIA

# =====================================================
# API – BACKEND (Flask)
# =====================================================

API_BASE_URL_DEVELOPMENT=http://localhost:5000
API_BASE_URL_PRODUCTION=https://twoja-domena.pl         # DO UZUPEŁNIENIA

# =====================================================
# KONFIGURACJA SERWERA FLASK
# =====================================================

FLASK_HOST_DEVELOPMENT=0.0.0.0
FLASK_PORT_DEVELOPMENT=5000
FLASK_DEBUG_DEVELOPMENT=true

FLASK_HOST_PRODUCTION=127.0.0.1                         # Nginx przekieruje na port 80
FLASK_PORT_PRODUCTION=5000 
FLASK_DEBUG_PRODUCTION=false                                    

# =====================================================
# LOGOWANIE I MONITORING
# =====================================================

LOG_LEVEL_DEVELOPMENT=DEBUG
LOG_LEVEL_PRODUCTION=WARNING

# =====================================================
#    DODATKOWE PARAMETRY (JEŚLI POTRZEBNE)
# =====================================================

# LIMITY API
MAX_CHECKLIST_ITEMS_DEVELOPMENT=200
MAX_CHECKLIST_ITEMS_PRODUCTION=300
